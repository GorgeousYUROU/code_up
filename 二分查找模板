🌰：求方程=0的根
const double eps = 10e-5;
double f(double x){
  return ...;//计算f(x)
}
double look(double left,double right)
{
	int mid;
	while(left-right >eps)  //精度为10^-5
	{
		mid = (left + right/2);
		
		if(f[mid]>0) 
		{
			right = mid; //往左区间逼近
		}
		else left = mid;
	}
	
	return mid; 
}
